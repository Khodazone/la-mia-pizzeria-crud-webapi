@using csharp_ef_pizze;
@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img height="250" width="300" src="@Model.Image" alt="Immagine @Model.Title">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Title
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Description
            </p>

            <strong>Prezzo:</strong>
            @Model.Price <span>Euro</span>
            </p>

        </div>
    </div>
</div>